<div class="tab-pane fade machinetps" id="channel-drink-list" role="tabpanel" aria-labelledby="tab-4">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table id="machine-channel-drink" class="dataTable table table-dark nowrap w-100">
                    <thead>
                        <tr>
                            {{#each channelDrinkListOp}}
                            <th id="{{ this.data }}">{{ this.title }}</th>
                            {{/each}}
                        </tr>
                    </thead>
                    <tbody>
                        {{#each channelDrink}}
                        <tr>
                            <td>{{ MCD_ChannelID }}</td>
                            <td>
                                 {{#if this.MCD_Active}}
                                <i class="fa fa-circle-check"></i>
                            {{else}}
                                <i class="fa fa-circle-xmark"></i>
                            {{/if}}
                            </td>
                            <td>
                                {{#if MCD_StockCode}}
                                {{ StockName }}
                                {{else}}
                                未選
                                {{/if}}
                            </td>
                            <td>{{ MCD_Capacity }}</td>
                            <td>{{ MCD_Remain }}</td>
                            <td>{{ MCD_Unit }}</td>
                            <td>{{ MCD_StockCode }}</td>
                            <td>{{ MCD_Status }}</td>
                            <td>{{ MCD_ChannelMode }}</td>
                            <td>{{ MCD_ExpiryDate }}</td>
                            <td>{{ MCD_ReminderDate }}</td>
                            <td>{{ MCD_StatusCode }}</td>
                            <td></td>
                            <td></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
