<div class="tab-pane fade machinetps" id="stock-list" role="tabpanel" aria-labelledby="tab-3">

    <div class="card">
        <div class="card-body">
            {{#if user.isSuperAdmin }}
                <a href="#" class="btn btn-success d-none" onclick="openSearchProductModal(event, 'sku-search')"><i class="fa fa-plus mx-1"></i>Add Stock</a>
            {{/if}}
            <div class="table-responsive mt-2">
                <table id="machine-stock" class="dataTable table table-dark nowrap w-100">
                    <thead>
                        <tr>
                            {{#each stockListOp}}
                            <th id="{{ this.data }}">{{ this.title }}</th>
                            {{/each}}
                        </tr>
                    </thead>
                    <tbody>
                        {{#each stocks}}
                        <tr>
                            <td>{{ this.MS_StockCode }}</td>
                            <td>{{ this.MS_StockName }}</td>
                            <td>{{ this.MS_Unit }}</td>
                            <td>{{ this.MS_UnitPrice }}</td>
                            <td>{{ this.MS_Price }}</td>
                            <td>{{{ this.btn }}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const columnDefs = [
        {
            orderable: false,
            targets: [1, -1]
        },
        {
            render: $.fn.dataTable.render.number(',', '.', 2),
            targets: [-4, -3]
        }]
        const mpDt = initMachineTables('machine-stock', columnDefs);
    })    
</script>